@model Jobick.ViewModels.ProjectStatisticsVM
@{
    // Check if there's any data to display
    var hasData = Model.TargetedProgressByYear.Any() || Model.ActualProgressByYear.Any();
}

@if (hasData)
{
    <div class="row mt-4">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">مقارنة معدل الإنجاز المستهدف والفعلي</h4>
                    <div>
                        <label for="yearFilter" class="me-2">اختر السنة:</label>
                        <select id="yearFilter" class="form-select form-select-sm d-inline-block w-auto">
                            <option value="all">جميع السنوات</option>
                        </select>
                    </div>
                </div>
                <div class="card-body">
                    <div id="progressComparisonChart" style="min-height: 360px;"></div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <strong>معدل الإنجاز المستهدف:</strong> مجموع أوزان جميع المهام للسنة المحددة<br />
                            <strong>معدل الإنجاز الفعلي:</strong> مجموع (وزن المهمة × نسبة الإنجاز الفعلية) لجميع المهام
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
