@model Jobick.ViewModels.ProjectStatisticsVM
@{
    // Check if there's any data to display
    var hasData = Model.TargetedProgressByYear.Any() || Model.ActualProgressByYear.Any();
}

@if (hasData)
{
    <div class="row mt-4">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center flex-wrap">
                    <h4 class="card-title mb-2 mb-md-0">مقارنة معدل الإنجاز المستهدف والفعلي</h4>
                    <div class="d-flex gap-2 align-items-center flex-wrap">
                        <label for="viewMode" class="me-2 mb-0">العرض:</label>
                        <select id="viewMode" class="form-select form-select-sm d-inline-block w-auto">
                            <option value="yearly">سنوي</option>
                            <option value="quarterly">ربع سنوي</option>
                        </select>
                        <label for="yearFilter" class="me-2 mb-0 ms-3">اختر السنة:</label>
                        <select id="yearFilter" class="form-select form-select-sm d-inline-block w-auto">
                            <option value="all">جميع السنوات</option>
                        </select>
                    </div>
                </div>
                <div class="card-body">
                    <div id="progressComparisonChart" style="min-height: 360px;"></div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <strong>معدل الإنجاز المستهدف:</strong> متوسط أوزان جميع المهام للفترة المحددة<br />
                            <strong>معدل الإنجاز الفعلي:</strong> مجموع (وزن المهمة × نسبة الإنجاز الفعلية) لجميع المهام<br />
                            <span id="quarterNote" style="display:none;"><strong>ملاحظة:</strong> الربع الأول (يناير-مارس)، الثاني (أبريل-يونيو)، الثالث (يوليو-سبتمبر)، الرابع (أكتوبر-ديسمبر)</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
