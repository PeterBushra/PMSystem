@{
    @using Microsoft.Extensions.Configuration
    @inject IConfiguration Configuration
}
<!DOCTYPE html>
<html>
<head>
    <partial name="Jobick/_Meta" />

    <title>@Configuration.GetSection("DefaultValue")["Title"]</title>

    <!-- Favicon icon -->
    <link rel="shortcut icon" type="image/png" href="~/Jobick/images/SmallLogo.png">

    @RenderSection("Jobick_style", false)
    <!-- All StyleSheet -->
    <link href="~/Jobick/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet">
    <!-- Globle CSS -->
    <link class="main-css" href="~/Jobick/css/style.css" rel="stylesheet">
    <!-- App-wide typography (Arabic-friendly) MUST be last to win -->
    <link href="~/css/typography.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/rtl-utilities.css" rel="stylesheet" asp-append-version="true">
</head>
<body>
    <partial name="Jobick/_PreLoader" />
    <div id="main-wrapper">
        <partial name="Jobick/_NavHeader" />
        <partial name="Jobick/_Header" />
        <partial name="Jobick/_Sidebar" />
        @RenderBody()
        <partial name="Jobick/_Footer" />
    </div>
    @RenderSection("Jobick_script", false)
</body>
</html>