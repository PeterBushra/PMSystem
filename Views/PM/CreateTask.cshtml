@model Jobick.Models.Task

@{
    Layout = "~/Views/Shared/_LayoutJobick.cshtml";
    ViewData["Title"] = "Add Task";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "PM")">Projects</a></li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("ProjectDetails", "PM", new { id = Model.ProjectId })">Project Details</a>
                </li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Add Task</a></li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header"><h4 class="card-title">Add Task</h4></div>
                    <div class="card-body">
                        <div class="form-validation">
                            <form asp-action="PostTask" method="post" class="needs-validation" novalidate>
                                <input type="hidden" asp-for="ProjectId" />

                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label form-label required">Stage Name</label>
                                            <div class="col-lg-6">
                                                <input asp-for="StageName" class="form-control" required />
                                                <div class="invalid-feedback">Please enter stage name.</div>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label form-label required">Task Name</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Task1" class="form-control" required />
                                                <div class="invalid-feedback">Please enter task name.</div>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label form-label required">Implementor Department</label>
                                            <div class="col-lg-6">
                                                <input asp-for="ImplementorDepartment" class="form-control" required />
                                                <div class="invalid-feedback">Please enter department.</div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-xl-6">
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label form-label required">Expected Start Date</label>
                                            <div class="col-lg-6">
                                                <input asp-for="ExpectedStartDate" type="date" class="form-control" required />
                                                <div class="invalid-feedback">Select start date.</div>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label form-label required">Expected End Date</label>
                                            <div class="col-lg-6">
                                                <input asp-for="ExpectedEndDate" type="date" class="form-control" required />
                                                <div class="invalid-feedback">Select end date.</div>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-4 col-form-label form-label">Done Ratio (%)</label>
                                            <div class="col-lg-6">
                                                <input asp-for="DoneRatio" type="number" step="0.01" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3 row">
                                    <div class="col-lg-8 ms-auto">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                        <a href="@Url.Action("ProjectDetails", "PM", new { id = Model.ProjectId })" class="btn btn-danger">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Jobick_script
{
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
