@model Jobick.Models.Task

@{
    Layout = "~/Views/Shared/_LayoutJobick.cshtml";
    ViewData["Title"] = Model.Id == 0 ? "Add Task" : "Edit Task";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("ProjectDetails", "Projects", new { id = Model.ProjectId })">Project Details</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">@ViewData["Title"]</a></li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">@ViewData["Title"]</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="@(Model.Id == 0 ? "PostTask" : "EditTask")" method="post" class="needs-validation" novalidate>
                            <!-- Hidden fields for non-input/non-editable attributes -->
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="ProjectId" />
                            <input type="hidden" asp-for="CreatedDate" />
                            <input type="hidden" asp-for="CreatedBy" />
                            <input type="hidden" asp-for="Project" />
                            <input type="hidden" asp-for="CreatedByNavigation" />

                            <!-- Visible input fields -->
                            <div class="mb-3">
                                <label asp-for="Task1" class="form-label"></label>
                                <input asp-for="Task1" class="form-control" required />
                                <span asp-validation-for="Task1" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="TaskAr" class="form-label"></label>
                                <input asp-for="TaskAr" class="form-control" required />
                                <span asp-validation-for="TaskAr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="StageName" class="form-label"></label>
                                <input asp-for="StageName" class="form-control" />
                                <span asp-validation-for="StageName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="StageNameAr" class="form-label"></label>
                                <input asp-for="StageNameAr" class="form-control" />
                                <span asp-validation-for="StageNameAr" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ImplementorDepartment" class="form-label"></label>
                                <input asp-for="ImplementorDepartment" class="form-control" />
                                <span asp-validation-for="ImplementorDepartment" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="DepartmentResponsible" class="form-label"></label>
                                <input asp-for="DepartmentResponsible" class="form-control" />
                                <span asp-validation-for="DepartmentResponsible" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ExpectedStartDate" class="form-label"></label>
                                <input asp-for="ExpectedStartDate" type="date" class="form-control" required />
                                <span asp-validation-for="ExpectedStartDate" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ExpectedEndDate" class="form-label"></label>
                                <input asp-for="ExpectedEndDate" type="date" class="form-control" required />
                                <span asp-validation-for="ExpectedEndDate" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ActualEndDate" class="form-label"></label>
                                <input asp-for="ActualEndDate" type="date" class="form-control" value="@(Model.ActualEndDate == DateTime.MinValue ? "" : Model.ActualEndDate.ToString("yyyy-MM-dd"))" />
                                <span asp-validation-for="ActualEndDate" class="text-danger"></span>
                                <small class="form-text text-muted">Leave blank if not completed.</small>
                            </div>
                            <div class="mb-3">
                                <label asp-for="DoneRatio" class="form-label"></label>
                                <input asp-for="DoneRatio" type="number" step="0.01" class="form-control" min="0" max="100" />
                                <span asp-validation-for="DoneRatio" class="text-danger"></span>
                                <small class="form-text text-muted">Enter a value between 0 and 100. 100 means complete.</small>
                            </div>
                            <div class="mb-3">
                                <label asp-for="DefinationOfDone" class="form-label"></label>
                                <textarea asp-for="DefinationOfDone" class="form-control"></textarea>
                                <span asp-validation-for="DefinationOfDone" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ManyDaysToComplete" class="form-label"></label>
                                <input asp-for="ManyDaysToComplete" type="number" class="form-control" />
                                <span asp-validation-for="ManyDaysToComplete" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Save</button>
                            <a href="@Url.Action("ProjectDetails", "Projects", new { id = Model.ProjectId })" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Jobick_script
{
    <script src="~/Jobick/vendor/global/global.min.js"></script>
    <script src="~/Jobick/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/Jobick/vendor/bootstrap-datepicker-master/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Jobick/js/custom.min.js"></script>
    <script src="~/Jobick/js/dlabnav-init.js"></script>

    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
