@model Jobick.Models.Task
@{
    var initialShowAttachment = (bool)(ViewData["InitialShowAttachment"] ?? false);
    var logs = (IEnumerable<Jobick.Models.TaskLog>?)ViewBag.TaskLogs ?? Enumerable.Empty<Jobick.Models.TaskLog>();
}

<div class="form-step d-none" data-step="2">
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
                <div class="accordion" id="progressLogAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#progressLogCollapse">
                                <span class="fw-bold">سجل التقدم</span>
                            </button>
                        </h2>
                        <div id="progressLogCollapse" class="accordion-collapse collapse show" data-bs-parent="#progressLogAccordion">
                            <div class="accordion-body p-3">
                                <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-primary" id="addLogRowBtn">إضافة تقدم جديد</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" id="completeTodayBtn" title="إضافة صف بنسبة المتبقي للوصول إلى 100% بتاريخ اليوم">اكتمال اليوم</button>
                                    </div>
                                    <div class="small text-muted">املأ التاريخ والنسبة. يتم تجاهل الصفوف الفارغة.</div>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-sm align-middle" id="logsTable">
                                        <thead>
                                            <tr>
                                                <th style="width:45%">التاريخ</th>
                                                <th style="width:45%">النسبة %</th>
                                                <th style="width:10%"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (logs.Any())
                                            {
                                                foreach (var l in logs)
                                                {
                                                    <tr>
                                                        <td>
                                                            <input type="date" name="LogDate[]" class="form-control log-date" value="@l.Date.ToString("yyyy-MM-dd")" />
                                                        </td>
                                                        <td>
                                                            <input type="number" name="LogProgress[]" class="form-control log-progress" min="0" max="100" step="0.01" value="@l.Progress.ToString(System.Globalization.CultureInfo.InvariantCulture)" />
                                                        </td>
                                                        <td class="text-end">
                                                            <button type="button" class="btn btn-sm btn-outline-danger remove-log">حذف</button>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td><input type="date" name="LogDate[]" class="form-control log-date" /></td>
                                                    <td><input type="number" name="LogProgress[]" class="form-control log-progress" min="0" max="100" step="0.01" /></td>
                                                    <td class="text-end"><button type="button" class="btn btn-sm btn-outline-danger remove-log">حذف</button></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <div class="mt-2">
                                    إجمالي النسبة من السجل: <strong><span id="logsTotalSpan">0</span>%</strong>
                                </div>
                                <div id="logsError" class="invalid-feedback d-block"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Attachment -->
    <div class="row">
        <div class="col-12">
            <div class="mb-3" id="attachmentContainer" style="display:@(initialShowAttachment ? "block" : "none");">
                <label for="Attachment" class="form-label fw-bold">رفع المرفق (مطلوب عند اكتمال المهمة)</label>
                <small class="form-text text-muted d-block mb-2">الامتدادات المدعومة: PDF، JPG، PNG، DOC، DOCX، XLS، XLSX (حد أقصى 10MB)</small>
                @if (!string.IsNullOrEmpty(Model.AttachmentFilePath) && Model.Id != 0)
                {
                    <div class="mb-2">
                        <span class="text-success">تم إرفاق ملف بالفعل.</span>
                        <a class="btn btn-link" href="@Url.Action("DownloadAttachment", "Tasks", new { id = Model.Id })">تحميل الملف الحالي</a>
                    </div>
                }
                else
                {
                    <input type="file" name="Attachment" id="Attachment" class="form-control" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx,.xls,.xlsx" />
                    <div class="small text-muted mt-1" id="attachmentInfo"></div>
                    <span class="text-danger" id="attachmentError"></span>
                }
            </div>
        </div>
    </div>
</div>
