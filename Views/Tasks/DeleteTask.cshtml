@model Jobick.Models.Task

@{
    Layout = "~/Views/Shared/_LayoutJobick.cshtml";
    ViewData["Title"] = "Delete Task";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("ProjectDetails", "Projects", new { id = Model.ProjectId })">Project Details</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Delete Task</a></li>
            </ol>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title text-danger">Delete Task</h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger mb-4">
                            Are you sure you want to delete this task?
                        </div>
                        <dl class="row mb-4">
                            <dt class="col-sm-2">Task</dt>
                            <dd class="col-sm-10">@Model.Task1</dd>
                            <dt class="col-sm-2">Task (AR)</dt>
                            <dd class="col-sm-10">@Model.TaskAr</dd>
                            <dt class="col-sm-2">Stage</dt>
                            <dd class="col-sm-10">@Model.StageName</dd>
                            <dt class="col-sm-2">Department</dt>
                            <dd class="col-sm-10">@Model.ImplementorDepartment</dd>
                            <dt class="col-sm-2">Expected Start</dt>
                            <dd class="col-sm-10">@Model.ExpectedStartDate.ToString("yyyy/MM/dd")</dd>
                            <dt class="col-sm-2">Expected End</dt>
                            <dd class="col-sm-10">@Model.ExpectedEndDate.ToString("yyyy/MM/dd")</dd>
                        </dl>
                        <form asp-action="PostDeleteTask" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="ProjectId" />
                            <button type="submit" class="btn btn-danger me-2">Delete</button>
                            <a href="@Url.Action("ProjectDetails", "Projects", new { id = Model.ProjectId })" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Jobick_script
{
    <script src="~/Jobick/vendor/global/global.min.js"></script>
    <script src="~/Jobick/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/Jobick/vendor/bootstrap-datepicker-master/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Jobick/js/custom.min.js"></script>
    <script src="~/Jobick/js/dlabnav-init.js"></script>

    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
