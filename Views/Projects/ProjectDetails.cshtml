@model Jobick.ViewModels.ProjectDetailsVM
@{
    Layout = "~/Views/Shared/_LayoutJobick.cshtml";
    ViewData["Title"] = "تفاصيل المشروع - " + Model.Name;
}

<div class="content-body" dir="rtl" style="text-align:right;">
    <div class="container-fluid">
        <!-- Breadcrumb -->
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Projects")">المشاريع</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">تفاصيل المشروع</a></li>
            </ol>
        </div>

        <!-- Project Information -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">معلومات المشروع</h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-xl-6">
                                <p><strong>الاسم:</strong> @Model.Name</p>
                                <p><strong>الوصف:</strong> @Model.Description</p>
                                <p><strong>المسؤول عن التنفيذ:</strong> @Model.ResponsibleForImplementing</p>
                            </div>
                            <div class="col-xl-6">
                                <p><strong>مالك النظام:</strong> @Model.SystemOwner</p>
                                <p><strong>هدف المشروع:</strong> @Model.ProjectGoal</p>
                                <p><strong>تاريخ البدء:</strong> @Model.StartSate.ToShortDateString()</p>
                                <p><strong>تاريخ الانتهاء:</strong> @Model.EndDate.ToShortDateString()</p>
                                <p><strong>التكلفة الإجمالية:</strong> @Model.TotalCost?.ToString()</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- KPI Summary Statistics -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row shapreter-row">
                            <div class="col-xl-2 col-lg-4 col-sm-4 col-6">
                                <div class="static-icon">
                                    <span><i class="fas fa-tasks"></i></span>
                                    <h3 class="count mb-0">@Model.KPIs.TotalTasks</h3>
                                    <p class="mb-0">إجمالي المهام</p>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-4 col-sm-4 col-6">
                                <div class="static-icon" data-bs-toggle="tooltip" data-bs-placement="top" title="عدد المهم المنتهية تماماً 100%">
                                    <span><i class="fas fa-check-circle text-success"></i></span>
                                    <h3 class="count mb-0">@Model.KPIs.CompletedTasks</h3>
                                    <p class="mb-0">المهام المكتملة</p>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-4 col-sm-4 col-6">
                                <div class="static-icon" data-bs-toggle="tooltip" data-bs-placement="top" title="عدد المهم قيد التنفيذ">
                                    <span><i class="fas fa-spinner text-info"></i></span>
                                    <h3 class="count mb-0">@Model.KPIs.InProgressTasks</h3>
                                    <p class="mb-0">قيد التنفيذ</p>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-4 col-sm-4 col-6">
                                <div class="static-icon" data-bs-toggle="tooltip" data-bs-placement="top" title="عدد المهام التي لم يأتي تاريخ بدايتها بعد">
                                    <span><i class="fas fa-clock text-warning"></i></span>
                                    <h3 class="count mb-0">@Model.KPIs.NotStartedTasks</h3>
                                    <p class="mb-0">لم تبدأ</p>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-4 col-sm-4 col-6">
                                <div class="static-icon" data-bs-toggle="tooltip" data-bs-placement="top" title="عدد المهام المتأخرة عن موعدها - لم تنتهي كم خطط لها">
                                    <span><i class="fas fa-exclamation-triangle text-danger"></i></span>
                                    <h3 class="count mb-0">@Model.KPIs.OverdueTasks</h3>
                                    <p class="mb-0">متأخرة</p>
                                </div>
                            </div>
                            <div class="col-xl-2 col-lg-4 col-sm-4 col-6">
                                <div class="static-icon" data-bs-toggle="tooltip" data-bs-placement="top" title="الأيام المتبقية حتى نهاية المشروع">
                                    <span><i class="fas fa-calendar-alt"></i></span>
                                    <h3 class="count mb-0">@Model.KPIs.DaysRemaining</h3>
                                    <p class="mb-0">الأيام المتبقية حتى نهاية المشروع</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- KPI Charts -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">مؤشرات الأداء للمشروع</h4>
                    </div>
                    <div class="card-body pb-2">
                        <div class="row sp10">

                            <!-- Task Completion Chart -->
                            @* <div class="col-xl-3 col-md-6 col-6 mb-4 text-center">
                                <div class="d-inline-block ms-auto me-auto mb-md-3 mb-2 db-donut-chart-sale">
                                    <span class="donut" data-peity='{ "fill": ["#35c556", "var(--light)"], "innerRadius": 38, "radius": 10}'>@Model.KPIs.GetTaskStatusChartData()</span>
                                    <h4 class="mb-0 pie-label">@Model.KPIs.CompletionPercentage%</h4>
                                </div>
                                <h5 class="mb-1">نسبة إنجاز المهام</h5>
                                <p class="mb-0">@Model.KPIs.CompletedTasks من @Model.KPIs.TotalTasks مهمة</p>
                            </div> *@

           @*                  <!-- Project Timeline Progress -->
                            <div class="col-xl-3 col-md-6 col-6 mb-4 text-center">
                                <div class="d-inline-block ms-auto me-auto mb-md-3 mb-2 db-donut-chart-sale">
                                    <span class="donut" data-peity='{ "fill": ["#3f4cfe", "var(--light)"], "innerRadius": 38, "radius": 10}'>@Model.KPIs.GetProjectProgressChartData()</span>
                                    <h4 class="mb-0 pie-label">@Model.KPIs.ProjectProgressPercentage%</h4>
                                </div>
                                <h5 class="mb-1">تقدم الجدول الزمني</h5>
                                <p class="mb-0">@Model.KPIs.DaysRemaining يوم متبقي</p>
                            </div> *@

                            <!-- In Progress vs Remaining -->
                            <div class="col-xl-3 col-md-6 col-6 mb-4 text-center">
                                <div class="d-inline-block ms-auto me-auto mb-md-3 mb-2 db-donut-chart-sale">
                                    <span class="donut" data-peity='{ "fill": ["#ffc107", "var(--light)"], "innerRadius": 38, "radius": 10}'>@Model.KPIs.InProgressTasks/@(Model.KPIs.InProgressTasks + Model.KPIs.NotStartedTasks)</span>
                                    <h4 class="mb-0 pie-label">
                                        @((Model.KPIs.InProgressTasks + Model.KPIs.NotStartedTasks) > 0 ?
                                            Math.Round((decimal)Model.KPIs.InProgressTasks / (Model.KPIs.InProgressTasks + Model.KPIs.NotStartedTasks) * 100, 0) : 0)%
                                    </h4>
                                </div>
                                <h5 class="mb-1">المهام النشطة</h5>
                                <p class="mb-0">@Model.KPIs.InProgressTasks قيد التنفيذ</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Department & Stage Distribution -->
        <div class="row">
         @*    @if (Model.KPIs.TasksByDepartment.Any())
            {
                <div class="col-xl-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">المهام حسب القسم</h4>
                        </div>
                        <div class="card-body">
                            @foreach (var dept in Model.KPIs.TasksByDepartment.OrderByDescending(d => d.Value))
                            {
                                var percentage = Math.Round((decimal)dept.Value / Model.KPIs.TotalTasks * 100, 0);
                                <div class="progress default-progress mb-3">
                                    <div class="progress-bar bg-primary progress-animated"
                                         style="width: @percentage%; height:8px;" role="progressbar">
                                        <span class="sr-only">@percentage% مكتملة</span>
                                    </div>
                                </div>
                                <div class="d-flex align-items-end mt-2 pb-3 justify-content-between">
                                    <span class="font-w500">@dept.Key</span>
                                    <h6 class="mb-0"> (@percentage%)</h6>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            } *@

            @if (Model.KPIs.TasksByStage.Any())
            {
                <div class="col-xl-6">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">المهام حسب المرحلة</h4>
                        </div>
                        <div class="card-body">
                            @foreach (var stage in Model.KPIs.TasksByStage.OrderByDescending(s => s.Value))
                            {
                                var percentage = Math.Round((decimal)stage.Value / Model.KPIs.TotalTasks * 100, 0);
                                var colors = new[] { "bg-success", "bg-info", "bg-warning", "bg-danger", "bg-primary" };
                                var colorIndex = Math.Abs(stage.Key.GetHashCode()) % colors.Length;

                                <div class="progress default-progress mb-3">
                                    <div class="progress-bar @colors[colorIndex] progress-animated"
                                         style="width: @percentage%; height:8px;" role="progressbar">
                                        <span class="sr-only">@percentage% مكتملة</span>
                                    </div>
                                </div>
                                <div class="d-flex align-items-end mt-2 pb-3 justify-content-between">
                                    <span class="font-w500">@stage.Key</span>
                                    <h6 class="mb-0"> (@percentage%)</h6>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Tasks Grid -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h4 class="card-title">مهام المشروع</h4>
                        <a href="@Url.Action("CreateTask", "Tasks", new { projectId = Model.Id })" class="btn btn-primary">إضافة مهمة</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th class="text-center">الحالة</th>
                                        <th class="text-center">اسم المرحلة</th>
                                        <th class="text-center">المهمة</th>
                                        <th class="text-center">القسم</th>
                                        <th class="text-center">تاريخ البدء المتوقع</th>
                                        <th class="text-center">تاريخ الانتهاء المتوقع</th>
                                        <th class="text-center">نسبة الإنجاز</th>
                                        <th class="text-center">التكلفة</th>
                                        <th class="text-center">الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var task in Model.Tasks)
                                    {
                                        var statusClass = task.DoneRatio >= 1.0m ? "badge-success" :
                                            task.ExpectedEndDate < DateTime.Today ? "badge-danger" :
                                            task.DoneRatio > 0 ? "badge-info" : "badge-warning";

                                        var statusText = task.DoneRatio >= 1.0m ? "مكتملة" :
                                            task.ExpectedEndDate < DateTime.Today ? "متأخرة" :
                                            task.DoneRatio > 0 ? "قيد التنفيذ" : "لم تبدأ";

                                        <tr>
                                            <td><span class="badge @statusClass">@statusText</span></td>
                                            <td>@task.StageName</td>
                                            <td>@task.Task1</td>
                                            <td>@task.ImplementorDepartment</td>
                                            <td>@task.ExpectedStartDate.ToShortDateString()</td>
                                            <td>@task.ExpectedEndDate.ToShortDateString()</td>
                                            <td>@task.DoneRatio?.ToString("P0")</td>
                                            <td>@task.Cost.ToString()</td>
                                            <td>
                                                <div class="d-flex">
                                                    <a asp-controller="Tasks" asp-action="EditTask" asp-route-id="@task.Id"
                                                       class="btn btn-primary shadow btn-xs sharp me-1">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <form asp-controller="Tasks" asp-action="DeleteTask" asp-route-id="@task.Id" asp-route-projectId="@Model.Id" method="post" style="display:inline;">
                                                        <button type="submit" class="btn btn-danger shadow btn-xs sharp">
                                                            <i class="fa fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

