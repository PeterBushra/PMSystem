@model IEnumerable<Jobick.Models.Project>

@{
    Layout = "~/Views/Shared/_LayoutJobick.cshtml";
    ViewData["Title"] = "Projects";
}

<div class="content-body">
    <div class="container-fluid">

        <!-- Breadcrumb -->
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Projects</a></li>
            </ol>
        </div>

        <!-- Add Button -->
        <div class="row mb-3">
            <div class="col-12">
                <a class="btn btn-success" href="@Url.Action("CreateProject", "Projects")">
                    <i class="fa fa-plus"></i> Add Project
                </a>
            </div>
        </div>

        <!-- Projects Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Projects List</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="projectsTable" class="display" style="min-width: 1000px">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Name (AR)</th>
                                        <th>Description</th>
                                        <th>Description (AR)</th>
                                        <th>Responsible</th>
                                        <th>System Owner</th>
                                        <th>Project Goal</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Total Cost</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var project in Model)
                                    {
                                        <tr>
                                            <td>@project.Name</td>
                                            <td>@project.NameAr</td>
                                            <td>@project.Description</td>
                                            <td>@project.DescriptionAr</td>
                                            <td>@project.ResponsibleForImplementing</td>
                                            <td>@project.SystemOwner</td>
                                            <td>@project.ProjectGoal</td>
                                            <td>@project.StartSate.ToString("yyyy/MM/dd")</td>
                                            <td>@project.EndDate.ToString("yyyy/MM/dd")</td>
                                            <td>@project.TotalCost?.ToString("C")</td>
                                            <td>
                                                <a class="btn btn-sm btn-primary"
                                                   href="@Url.Action("ProjectDetails", "Projects", new { id = project.Id })">
                                                    Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Jobick_style
{
    <!-- Datatable -->
    <link href="~/Jobick/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="~/Jobick/vendor/datatables/responsive/responsive.css" rel="stylesheet">
    <!-- Datepicker -->
    <link href="~/Jobick/vendor/bootstrap-datepicker-master/css/bootstrap-datepicker.min.css" rel="stylesheet">
}

@section Jobick_script
{
    <!-- Required vendors -->
    <script src="~/Jobick/vendor/global/global.min.js"></script>
    <script src="~/Jobick/vendor/chartjs/chart.bundle.min.js"></script>
    <script src="~/Jobick/vendor/apexchart/apexchart.js"></script>

    <!-- Datatable -->
    <script src="~/Jobick/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Jobick/vendor/datatables/responsive/responsive.js"></script>
    <script>
        $(document).ready(function () {
            $('#projectsTable').DataTable({
                responsive: true,
                "pageLength": 25
            });
        });
    </script>

    <!-- Bootstrap & Datepicker -->
    <script src="~/Jobick/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/Jobick/vendor/bootstrap-datepicker-master/js/bootstrap-datepicker.min.js"></script>

    <!-- Custom scripts -->
    <script src="~/Jobick/js/custom.min.js"></script>
    <script src="~/Jobick/js/dlabnav-init.js"></script>
}
