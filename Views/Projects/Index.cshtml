@model IEnumerable<Jobick.Models.Project>

@{
    Layout = "~/Views/Shared/_LayoutJobick.cshtml";
    ViewData["Title"] = "المشاريع";
    var today = DateTime.Today;
}

<div class="content-body">
    <div class="container-fluid">

        <!-- Breadcrumb -->
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">المشاريع</a></li>
            </ol>
        </div>

        <!-- Add Button -->
        <div class="row mb-3">
            <div class="col-12 text-end">
                <a class="btn btn-sm btn-primary"
                   href="@Url.Action("CreateProject", "Projects")">
                    <i class="fa fa-plus"></i> إضافة مشروع
                </a>
            </div>
        </div>

        <!-- Projects Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">قائمة المشاريع</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="projectsTable" class="table table-hover table-striped" style="min-width: 1000px">
                                <thead>
                                    <tr>
                                        <th class="text-center">الحالة</th>
                                        <th class="text-center">الاسم</th>
                                        <th class="text-center">الوصف</th>
                                        <th class="text-center">المسؤول</th>
                                        <th class="text-center">مالک النظام</th>
                                        <th class="text-center">هدف المشروع</th>
                                        <th class="text-center">تاريخ البدء</th>
                                        <th class="text-center">تاريخ الانتهاء</th>
                                        <th class="text-center">التكلفة الإجمالية</th>
                                        <th class="text-center" style="text-align: center !important;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var project in Model)
                                    {
                                        // Determine project status and style
                                        var hasTasks = project?.Tasks != null && project.Tasks.Any();
                                        var allTasksDone = hasTasks && project!.Tasks.All(t => (t.DoneRatio ?? 0m) >= 1.0m);

                                        string statusText;
                                        string badgeClass;

                                        if (allTasksDone)
                                        {
                                            statusText = "مكتمل";         // Completed
                                            badgeClass = "badge bg-success"; // green
                                        }
                                        else if (project.StartSate > today)
                                        {
                                            statusText = "لم تبدأ";       // Not started
                                            badgeClass = "badge bg-secondary"; // gray
                                        }
                                        else if (project.EndDate < today)
                                        {
                                            statusText = "متأخر";         // Delayed
                                            badgeClass = "badge bg-danger"; // red
                                        }
                                        else
                                        {
                                            statusText = "قيد التنفيذ";   // In progress
                                            badgeClass = "badge bg-warning text-dark"; // yellow
                                        }

                                        <tr onclick="window.location='@Url.Action("ProjectDetails", "Projects", new { id = project.Id })'"
                                            style="cursor:pointer;">
                                            <td class="text-center"><span class="@badgeClass">@statusText</span></td>
                                            <td>@project.Name</td>
                                            <td>@project.Description</td>
                                            <td>@project.ResponsibleForImplementing</td>
                                            <td>@project.SystemOwner</td>
                                            <td>@project.ProjectGoal</td>
                                            <td data-order="@project.StartSate.ToString("yyyy-MM-dd")">@project.StartSate.ToString("d")</td>
                                            <td data-order="@project.EndDate.ToString("yyyy-MM-dd")">@project.EndDate.ToString("d")</td>
                                            <td data-order="@project.TotalCost.GetValueOrDefault(0).ToString(System.Globalization.CultureInfo.InvariantCulture)">@project.TotalCost?.ToString("N0")</td>
                                            <td>
                                                <div class="d-flex">
                                                    <a asp-controller="Projects" asp-action="Edit" asp-route-id="@project.Id"
                                                       class="btn btn-primary shadow btn-xs sharp me-1">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <form asp-controller="Projects" asp-action="Delete" asp-route-id="@project.Id" method="post" style="display:inline;">
                                                        <button type="submit" class="btn btn-danger shadow btn-xs sharp">
                                                            <i class="fa fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Jobick_style
{
    <!-- Datatable -->
    <link href="~/Jobick/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
    <link href="~/Jobick/vendor/datatables/responsive/responsive.css" rel="stylesheet">
    <!-- Custom Stylesheet -->
    <link href="~/Jobick/vendor/bootstrap-datepicker-master/css/bootstrap-datepicker.min.css" rel="stylesheet">
    <link href="~/css/datatables-rtl.css" rel="stylesheet">

    <style>
        /* Center DataTables "لا توجد نتائج مطابقة" message */
        #projectsTable tbody td.dataTables_empty,
        table.dataTable tbody td.dataTables_empty {
            text-align: center !important;
        }
    </style>
}

@section Jobick_script
{
    <!-- Required vendors -->
    <script src="~/Jobick/vendor/global/global.min.js"></script>
    <script src="~/Jobick/vendor/chartjs/chart.bundle.min.js"></script>
    <!-- Apex Chart -->
    <script src="~/Jobick/vendor/apexchart/apexchart.js"></script>

    <!-- Datatable -->
    <script src="~/Jobick/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/Jobick/vendor/datatables/responsive/responsive.js"></script>
    <script src="~/Jobick/js/plugins-init/datatables.init.js"></script>

    <script src="~/Jobick/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="~/Jobick/vendor/bootstrap-datepicker-master/js/bootstrap-datepicker.min.js"></script>

    <script src="~/Jobick/js/custom.min.js"></script>
    <script src="~/Jobick/js/dlabnav-init.js"></script>

    <script>
        $(function(){
            // Initialize sorting for projects list, Arabic UI, disable sorting for actions column
            $('#projectsTable').DataTable({
                order: [],
                responsive: true,
                columnDefs: [ { targets: -1, orderable: false } ],
                language: {
                    // Localize search and length menu
                    search: 'بحث:',
                    searchPlaceholder: 'اكتب للبحث...',
                    lengthMenu: 'إظهار _MENU_ مُدخل',
                    // Keep your custom arrows
                    paginate: { previous: '&lt;', next: '&gt;' },
                    // Helpful Arabic strings
                    info: 'إظهار _START_ إلى _END_ من أصل _TOTAL_ مُدخل',
                    infoEmpty: 'لا توجد بيانات لعرضها',
                    zeroRecords: 'لا توجد نتائج مطابقة',
                    infoFiltered: '(مصفاة من إجمالي _MAX_ مُدخل)'
                }
            });
        });
    </script>
}
